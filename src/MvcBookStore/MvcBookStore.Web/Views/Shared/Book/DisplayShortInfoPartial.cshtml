
@model MvcBookStore.Domain.Book

<div class="well">
    <div class="col-md-3 text-center">
        <img src="@Model.Image" alt="@Model.Title" class="img-responsive img-thumbnail" width="140" />
    </div>
    <div class="col-md-6">
        <h3>
            <a href="@Url.Action("Details", "Book", new { id = Model.Id })">@Model.Title</a>
            <small>@Model.ISBN</small>
        </h3>
        <p>
            Total Sales: @Model.QuantitySaled<br />
            Release Date: @Model.ReleaseDate
        </p>
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Add", "Cart", new { id = Model.Id })" class="btn btn-primary btn-lg btn-block"><i class="fa fa-shopping-cart"></i> Add To Cart</a>
        <a href="@Url.Action("Details", "Book", new { id = Model.Id })" class="btn btn-info btn-lg btn-block">More Details</a>
    </div>
    <div class="clearfix"></div>
</div>